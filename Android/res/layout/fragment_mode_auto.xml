<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ModeDetail"
        style="@style/ModeDetailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mode_desc_rectangle"
        android:text="@string/mode_auto" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mission_progress"
            android:id="@+id/mission_progress_label"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mission_progress"
            android:layout_below="@+id/mission_progress_label"
            android:progress="0"
            android:indeterminate="false"
            android:progressTint="@android:color/holo_blue_dark"
            android:max="100" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mission_control_label"
                android:id="@+id/mission_control_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mission_control_label"
                android:rowCount="2"
                android:columnCount="2"
                android:useDefaultMargins="true"
                android:paddingLeft="-5dp">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:src="@drawable/ic_pause"
                    android:id="@+id/mc_pause"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:src="@drawable/ic_restore_white_24dp"
                    android:id="@+id/mc_restart"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:id="@+id/mc_prev"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:padding="5dp"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                    android:rotation="180"
                    android:id="@+id/mc_next"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:padding="5dp"
                    android:clickable="true" />
            </GridLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wp_speed"
                android:id="@+id/wp_speed_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="5dp"
                android:clickable="false" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(20m/s)"
                android:id="@+id/wp_speed"
                android:layout_toRightOf="@+id/wp_speed_label"
                android:clickable="false" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wp_speed_label"
                android:rowCount="1"
                android:columnCount="2"
                android:useDefaultMargins="true">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:src="@drawable/ic_minus"
                    android:id="@+id/wp_speed_minus"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:clickable="true" />

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_blue"
                    android:src="@drawable/ic_plus"
                    android:id="@+id/wp_speed_plus"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:clickable="true" />

            </GridLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

